<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/tab_height"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:padding="@dimen/margin_small_x">

    <LinearLayout
        android:id="@+id/vContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/tab_icon_size"
            android:layout_height="@dimen/tab_icon_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_small_x"
            android:src="@drawable/ic_user"
            android:tint="@drawable/pager_text_color"
            />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="title"
            android:textColor="@drawable/pager_text_color"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvNotif"
        style="@style/text_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toEndOf="@id/vContent"
        android:maxLines="1"
        android:visibility="gone"/>


</RelativeLayout>